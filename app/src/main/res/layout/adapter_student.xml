<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/dimen_16dp"
        style="@style/clickable"
        android:background="@color/white"
        android:id="@+id/adapter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.kreasirumahaplikasi.mahasiswakreasi.widget.animationtoggle.AnimationToggle
            android:id="@+id/toggle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_toLeftOf="@+id/lay_action"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_nim"
                    android:layout_width="wrap_content"
                    style="@style/Text.Small"
                    android:text="135410023"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_nama"
                    android:layout_width="wrap_content"
                    style="@style/Text.Judul.OneRow"
                    android:text="Muhammad Abdullah Al Muwahhid"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:id="@+id/lay_action"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/btn_edit"
                    style="@style/clickable"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/btn_delete"
                    style="@style/clickable"
                    android:layout_marginLeft="@dimen/dimen_8dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </com.kreasirumahaplikasi.mahasiswakreasi.widget.animationtoggle.AnimationToggle>
    </LinearLayout>
    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:padding="@dimen/dimen_16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="80dp"
                style="@style/Text.Small"
                android:text=""
                android:background="@drawable/shimer_placeholder"
                android:layout_height="wrap_content"/>
            <TextView
                style="@style/Text.Judul.OneRow"
                android:background="@drawable/shimer_placeholder"
                android:layout_width="wrap_content"
                android:text=""
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>
    <View
        android:id="@+id/border"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:layout_width="match_parent"
        android:background="@color/grey_300"
        android:layout_height="0.5dp"/>
</LinearLayout>