<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarThemeMain" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
        <item name="actionBarStyle">@style/ToolBarThemeBackgroundActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextView.Regular" parent="android:Widget.TextView">
        <!--        <item name="fontPath">fonts/SanFransisco-Regular.otf</item>-->
        <item name="android:color">@color/grey_700</item>
    </style>

    <style name="TextView.Italic" parent="android:Widget.TextView">
        <!--        <item name="fontPath">fonts/SanFransisco-RegularItalic.ttf</item>-->
        <item name="android:color">@color/grey_700</item>
    </style>

    <style name="TextView.Bold" parent="android:Widget.TextView">
        <!--        <item name="fontPath">fonts/SF-Semibold.otf</item>-->
        <item name="android:color">@color/grey_900</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--Grid Styling Text-->
    <style name="Text.Normal" parent="TextView.Regular">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Text.Normal.Bold" parent="TextView.Bold">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="Text.Small" parent="TextView.Regular">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Small.Bold" parent="TextView.Bold">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="Text.Title" parent="TextView.Regular">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="Text.Title.Bold" parent="TextView.Bold">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="AppTheme.AppBarCustom" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="homeAsUpIndicator">@drawable/ic_chevron_left_black_24dp</item>
    </style>

    <style name="ButtonActive" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:enabled">true</item>
        <item name="android:padding">@dimen/dimen_10dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_2dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_2dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_2dp</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:background">@drawable/btn_active</item>
    </style>

    <style name="Text.Judul" parent="Text.Title.Bold">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="Text.Judul.OneRow" parent="Text.Judul">
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Paragraph" parent="Text.Normal">
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="EditText.Form" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textSize">13dp</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="EditText.Search" parent="Text.Normal">
        <item name="android:background">@null</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="ToolBarThemeMain.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolBarThemeMain.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="ToolBarThemeMain.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>